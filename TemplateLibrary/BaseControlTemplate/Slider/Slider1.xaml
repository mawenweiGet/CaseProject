<UserControl x:Class="TemplateLibrary.Slider.Slider1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplateLibrary.Slider"
             mc:Ignorable="d">
    <WrapPanel>
        <Slider Maximum="20" TickFrequency="1" IsSnapToTickEnabled="True" Orientation="Vertical"
                 Height="200" HorizontalAlignment="Left" 
                VerticalAlignment="Top" TickPlacement="Both" ValueChanged="Slider_ValueChanged"/>
    </WrapPanel>
</UserControl>
