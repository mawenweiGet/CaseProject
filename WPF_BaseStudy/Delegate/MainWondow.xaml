<UserControl x:Class="WPF_BaseStudy.Delegate.MainWondow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_BaseStudy.Delegate"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Label Content="参数:" Margin="5 0 30 0"/>
                <TextBox x:Name="Parameters" Width="150" Height="50"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="结果值:" Margin="5 0 18 0"/>
                <TextBox x:Name="ReturnValue" Width="150" Height="50"/>
            </WrapPanel>
            <WrapPanel>
                <Button Content="无参无返回值" Tag="1" Width="100" Height="30" Margin="20" Click="Button_Click"/>
                <Button Content="有参无返回值" Tag="2" Width="100" Height="30" Margin="20" Click="Button_Click"/>
                <Button Content="无参有返回值" Tag="3" Width="100" Height="30" Margin="20" Click="Button_Click"/>
                <Button Content="有参有返回值" Tag="4" Width="100" Height="30" Margin="20" Click="Button_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
