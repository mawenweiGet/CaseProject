<Window x:Class="FunctionLibrary.CommandWindows.CommandWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunctionLibrary.CommandWindows"
        mc:Ignorable="d" Closed="Window_Closed"
        Title="CommandWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="CommandGiveBack" Grid.Row="0"
                 MinWidth="300" MinHeight="300"
                 Background="Black" Foreground="White"
                 TextWrapping="Wrap" TextChanged="CommandGiveBack_TextChanged"
                 Height="auto"/>

        <TextBox x:Name="MyCommand" Grid.Row="1"
                 MinWidth="300"  TextWrapping="Wrap"
                 Background="Black" Foreground="White"
                 Height="auto"/>

    </Grid>
</Window>
