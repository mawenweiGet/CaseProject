             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunctionLibrary.WPF_Promotion.DependencyPropertyStudy"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Name="T_StackPanel">
            <TextBox Name="Textbox1" Margin="50" Width="auto"></TextBox>
            <local:MyLabel Background="AliceBlue" Caption="{Binding ElementName=Textbox1, Path=Text}"></local:MyLabel>
        </StackPanel>
        <StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>
