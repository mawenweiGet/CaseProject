<UserControl x:Class="FunctionLibrary.WPF_Promotion.DependencyPropertyStudy.MyLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunctionLibrary.WPF_Promotion.DependencyPropertyStudy"
             mc:Ignorable="d">
    <Grid>
        <Label Content="{Binding Caption,RelativeSource={RelativeSource AncestorType=ContentControl}}"
               Background="{Binding Background,RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
    </Grid>
</UserControl>
