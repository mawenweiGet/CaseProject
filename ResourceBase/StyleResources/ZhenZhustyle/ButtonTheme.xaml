        <Border Name="Border" Background="Transparent">
            <TextBlock Name="Text"
                       Foreground="#B3B3B3"
                       Text="{TemplateBinding Content}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/ResourceBase;component/Font/#FontAwesome"
