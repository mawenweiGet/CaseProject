    <!--关闭按钮模板-->
    <ControlTemplate x:Key="WhiteCloseButton" TargetType="{x:Type Button}">
        <Border Name="Border" Background="Transparent">
            <StackPanel>
                <TextBlock Name="IcoText"
                           Padding="{TemplateBinding Padding}"
                           Text="{TemplateBinding Content}"
                           Style="{StaticResource CZFontAwesome}"
                           FontSize="20"
                           Foreground="White">
                </TextBlock>
            </StackPanel>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter TargetName="Border" Property="Background" 
                        Value="Red"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="IcoText" Property="Foreground" 
                        Value="{StaticResource CZDisabledColor}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

