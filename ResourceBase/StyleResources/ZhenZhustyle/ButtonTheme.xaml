    <ControlTemplate x:Key="m_RadioButton" TargetType="{x:Type RadioButton}">
        <WrapPanel>
            <Grid Width="13" Height="13" >
                <Ellipse x:Name="Border"  
                        Fill="Transparent"
                        StrokeThickness="1"
                        Stroke="Gray" />
                <Ellipse x:Name="CheckMark"
                        Margin="3"
                        Fill="Transparent" />
            </Grid>
            <TextBlock Text="{TemplateBinding Content}"
                           Style="{StaticResource CenterTextBlock}"
                           Margin="6,0"/>
        </WrapPanel>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="true">
                <Setter TargetName="CheckMark" Property="Fill" Value="#0140A2"/>
                <Setter TargetName="Border" Property="Stroke" Value="#000000"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="{x:Null}">
                <Setter TargetName="CheckMark" Property="Fill" Value="Gray"/>
                <Setter TargetName="Border" Property="Stroke" Value="Gray"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>


    <!--CZ图标文字按钮模板-->
    <ControlTemplate x:Key="DebugIcoTextButton" TargetType="{x:Type Button}">
        <Border Name="Border" CornerRadius="6" Background="Transparent" >
            <StackPanel VerticalAlignment="Center">
                <TextBlock Name="IcoText"
                           Text="{TemplateBinding Content}"
                           Style="{StaticResource CZFontAwesome}"
                           
                           Margin="0,0,0,5">
                </TextBlock>
                <TextBlock Name="Text" 
                           Style="{StaticResource CenterTextBlock}"
                           
                           Text="{TemplateBinding Tag}">
                </TextBlock>
            </StackPanel>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter TargetName="Border" Property="Background" 
                        Value="{StaticResource CZTitle}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="IcoText" Property="Foreground" 
                        Value="{StaticResource CZDisabledColor}"/>
                <Setter TargetName="Text" Property="Foreground" 
                        Value="{StaticResource CZDisabledColor}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
